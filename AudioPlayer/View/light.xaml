<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AudioPlayer.View">

    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#FFCEFFFB"/>
    </Style>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FF9EE6ED"/>
    
    <SolidColorBrush x:Key="MainBackround" Color="#FFCEFFFB"/>
    
    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="#FF3bc588" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="#FF2CB679"/>
    <SolidColorBrush x:Key="ComboBox.Foreground.Color" Color="Black"/>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#FF3bc588"/>

    <SolidColorBrush x:Key="Scroll.Thumb" Color="#FF84b88d"/>

    <SolidColorBrush x:Key="Button.Background" Color="#FF3bc588"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FF2CB679"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#21a86d"/>
    <SolidColorBrush x:Key="Button.Foreground" Color="Black"/>

    <SolidColorBrush x:Key="ListboxItem.Background" Color="#FF3bc588"/>
    <SolidColorBrush x:Key="ListboxItem.MouseOver.Background" Color="#FF2CB679"/>
    <SolidColorBrush x:Key="ListboxItem.Selected.Background" Color="#FF21a86d"/>
    <SolidColorBrush x:Key="ListboxItem.Foreground" Color="Black"/>

</ResourceDictionary>

