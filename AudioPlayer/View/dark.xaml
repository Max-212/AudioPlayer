<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AudioPlayer.View">



    <Style x:Key="WindowStyle" TargetType="Window">
        <Setter Property="Background" Value="#FF343434"/>
    </Style>

    <SolidColorBrush x:Key="TextBoxBackground" Color="#FF575757"/>

    <SolidColorBrush x:Key="MainBackround" Color="#FF343434"/>

    <SolidColorBrush x:Key="ComboBox.Static.Background" Color="#FF222222" />
    <SolidColorBrush x:Key="ComboBox.MouseOver.Background" Color="#FF575757"/>
    <SolidColorBrush x:Key="ComboBox.Foreground.Color" Color="#FF6153bd"/>
    <SolidColorBrush x:Key="ComboBox.Static.Border" Color="#FF222222"/>
    
    <SolidColorBrush x:Key="Scroll.Thumb" Color="#FF575757"/>

    <SolidColorBrush x:Key="Button.Background" Color="#FF222222"/>
    <SolidColorBrush x:Key="Button.MouseOver.Background" Color="#FF575757"/>
    <SolidColorBrush x:Key="Button.Pressed.Background" Color="#FF6C6C6C"/>
    <SolidColorBrush x:Key="Button.Foreground" Color="#FF6153bd"/>

    <SolidColorBrush x:Key="ListboxItem.Background" Color="#FF222222"/>
    <SolidColorBrush x:Key="ListboxItem.MouseOver.Background" Color="#FF575757"/>
    <SolidColorBrush x:Key="ListboxItem.Selected.Background" Color="#FF6C6C6C"/>
    <SolidColorBrush x:Key="ListboxItem.Foreground" Color="#FFbfbfbf"/>


</ResourceDictionary>